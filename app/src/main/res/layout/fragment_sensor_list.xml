<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.sensor.SensorListFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="70dp"
        android:width="169dp"
        android:height="53dp"
        android:textSize="44sp"
        android:textColor="@color/lightBlack"
        android:fontFamily="@font/inter"
        android:text="@string/sensors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/add_sensor_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/inter"
        android:text="@string/add_sensor"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/addButton"
        app:layout_constraintStart_toStartOf="@+id/addButton" />

    <ImageView
        android:id="@+id/addButtonEllipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/addButton"
        app:srcCompat="@drawable/ic_ellipse" />

    <ImageView
        android:id="@+id/addButtonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/addButtonEllipse"
        app:layout_constraintTop_toTopOf="@+id/addButtonEllipse"
        app:srcCompat="@drawable/ic_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>